<section class='widgets-control'>
  <header>
    <h2>widgets control</h2>
    <p>show/hide widgets</p>
  </header>
  <input type='checkbox' class='special' name='quick' id='quick' />
  <label for='quick'>quick draft</label>

  <input type='checkbox' class='special' name='target' id='target' />
  <label for='target'>yearly target</label>

  <input type='checkbox' class='special' name='tickets' id='tickets' />
  <label for='tickets'>tickets statics</label>

  <input type='checkbox' class='special' name='news' id='news' />
  <label for='news'>latest news</label>

  <input type='checkbox' class='special' name='tasks' id='tasks' />
  <label for='tasks'>latest tasks</label>

  <input
    type='checkbox'
    class='special'
    name='search-items'
    id='search-items'
  />
  <label for='search-items'>top search items</label>
</section>

<style>
  .widgets-control {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 10px;
  }
  .widgets-control > header {
    grid-column: 1/3;
  }
  .widgets-control > input {
    grid-column: 1/2;
    width: 20px;
    height: 20px;
    position: relative;
    border-radius: 5px;
    overflow: hidden;
    cursor: pointer;
    border: 2px solid #ccc;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    -ms-border-radius: 5px;
    -o-border-radius: 5px;
  }
  .widgets-control > input::before {
    content: '\e876';
    font-family: 'Material Icons';
    position: absolute;
    width: 0;
    height: 0;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background: var(--blue);
    color: #fff;
    text-align: center;
    padding-top: 2px;
    transition: var(--time-trannsition);
    -webkit-transition: var(--time-trannsition);
    -moz-transition: var(--time-trannsition);
    -ms-transition: var(--time-trannsition);
    -o-transition: var(--time-trannsition);
    -webkit-transform: translate(-50%, -50%);
    -moz-transform: translate(-50%, -50%);
    -ms-transform: translate(-50%, -50%);
    -o-transform: translate(-50%, -50%);
  }
  .widgets-control > input:checked::before {
    width: 100%;
    height: 100%;
    transform: translate(-50%, -50%) rotate(360deg);
    -webkit-transform: translate(-50%, -50%) rotate(360deg);
    -moz-transform: translate(-50%, -50%) rotate(360deg);
    -ms-transform: translate(-50%, -50%) rotate(360deg);
    -o-transform: translate(-50%, -50%) rotate(360deg);
  }
  .widgets-control > input:is(:hover, :checked) {
    border-color: var(--blue);
  }
  .widgets-control > label {
    text-transform: capitalize;
    cursor: pointer;
  }
</style>
