---
import Layout from '../layouts/Layout.astro'
import SiteControl from '../components/settings/SiteControl.astro'
import GeneralInfo from '../components/settings/GeneralInfo.astro'
import SecurityInfo from '../components/settings/SecurityInfo.astro'
import SocialAccounts from '../components/settings/SocialAccounts.astro'
import WidgetsControl from '../components/settings/WidgetsControl.astro'
import BackupManager from '../components/settings/BackupManager.astro'
---

<Layout title='setting'>
  <div class='container'>
    <SiteControl />
    <GeneralInfo />
    <SecurityInfo />
    <SocialAccounts />
    <WidgetsControl />
    <BackupManager />
  </div>
</Layout>

<style>
  .container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(500px, 1fr));
    gap: 20px;
  }
  @media only screen and (max-width: 600px) {
    .container {
      grid-template-columns: minmax(100px, 1fr) !important;
    }
  }
  .container header p {
    color: var(--second-font-color);
  }
</style>
