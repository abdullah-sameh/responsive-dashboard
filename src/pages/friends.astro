---
import Layout from '../layouts/Layout.astro'

import * as friends from '../content/friends.md'
---

<Layout title='friends'>
  <div class='container' id='container'>
    {
      friends.frontmatter.friends.map(
        (friend: { name: string; jobTitle: string }, i: number) => (
          <section>
            <div class='contact'>
              <i class='material-icons'>call</i>
              <i class='material-icons'>mail</i>
            </div>

            <header>
              <img src={`/friends/friend-0${i + 1}.webp`} alt='' />
              <h2>{friend.name}</h2>
              <p>{friend.jobTitle}</p>
            </header>

            <div class='status'>
              <p>
                <i class='material-icons'>face</i>
                {Math.floor(Math.random() * 31 + 70)} friend
              </p>
              <p>
                <i class='material-icons'>backup_table</i>
                {Math.floor(Math.random() * 20 + 10)} projects
              </p>
              <p>
                <i class='material-icons'>newspaper</i>
                {Math.floor(Math.random() * 25)} articles
              </p>
            </div>

            <footer>
              <div class='text'>
                <p>Joined {`0${i}/03/2021`}</p>
              </div>
              <div class='btns'>
                <button>profile</button>
                <button>remove</button>
              </div>
            </footer>
          </section>
        )
      )
    }
  </div>
</Layout>

<style>
  #container {
    display: grid;
    gap: 20px;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  }
  #container > section {
    position: relative;
  }
  #container > section > .contact {
    position: absolute;
    top: 10px;
    left: 10px;
    display: flex;
    gap: 5px;
  }
  #container > section > .contact > i {
    background: var(--third-bg);
    color: var(--second-font-color);
    border-radius: 50%;
    font-size: 18px;
    cursor: pointer;
    padding: 5px;
    transition: var(--time-trannsition);
    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    -ms-border-radius: 50%;
    -o-border-radius: 50%;
    -webkit-transition: var(--time-trannsition);
    -moz-transition: var(--time-trannsition);
    -ms-transition: var(--time-trannsition);
    -o-transition: var(--time-trannsition);
  }
  #container > section > .contact > i:hover {
    background: var(--blue);
    color: #fff;
  }
  #container > section > header {
    text-align: center;
  }
  #container > section > header > img {
    width: 100px;
    height: 100px;
    object-fit: contain;
    border-radius: 50%;

    -webkit-border-radius: 50%;
    -moz-border-radius: 50%;
    -ms-border-radius: 50%;
    -o-border-radius: 50%;
  }
  #container > section > header > h2 {
    font-size: 18px;
  }
  #container > section > header > p {
    font-size: 14px;
  }
  #container > section > .status {
    margin-top: 15px;
    padding: 10px 0;
    border-top: 1px solid var(--third-bg);
    border-bottom: 1px solid var(--third-bg);
  }
  .material-icons {
    font-size: 16px;
  }
  #container > section > .status > p {
    display: flex;
    gap: 10px;
    align-items: center;
  }
  #container > section > footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 10px;
  }
  #container > section > footer > .btns {
    display: flex;
    gap: 5px;
  }
  #container > section > footer p {
    color: var(--second-font-color);
    font-size: 14px;
  }
  #container > section > footer button {
    padding: 5px 10px;
    color: #fff;
    font-size: 14px;
    text-transform: capitalize;
    font-family: inherit;
    border-radius: 5px;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    -ms-border-radius: 5px;
    -o-border-radius: 5px;
  }
  #container > section > footer button:first-of-type {
    background: var(--blue);
  }
  #container > section > footer button:last-of-type {
    background: var(--red);
  }
</style>
